<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Feature Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <carousel
                jcr:primaryType="nt:unstructured"
                jcr:title="Feature Carousel"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Feature Carousel"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <style
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Style"
                                        name="./style">
                                        <items jcr:primaryType="nt:unstructured">
                                            <quote
                                                jcr:primaryType="nt:unstructured"
                                                text="Quote"
                                                value="quote"/>
                                            <awards
                                                jcr:primaryType="nt:unstructured"
                                                text="Awards"
                                                value="awards"/>
                                        </items>
                                    </style>
                                    <carouselitems
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        class="full-width"
                                        fieldDescription="Click 'Add' to add a a new item"
                                        fieldLabel="Tiles">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                            name="./carouselItems">
                                        <layout
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/layouts/fixedcolumns"
                                            method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <desktopimage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Add a desktop image for carousel item"
                                                            fieldLabel="Desktop Image"
                                                            name="./desktopImage"
                                                            rootPath="/content/dam/taylorsuniversity"/>
                                                        <mobileimage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Add a mobile image for carousel item"
                                                            fieldLabel="Mobile Image"
                                                            name="./mobileImage"
                                                            rootPath="/content/dam/taylorsuniversity"/>
                                                        <title
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Enter the title for carousel item"
                                                            fieldLabel="Title"
                                                            name="./title"/>
                                                        <text
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                            fieldDescription="Enter the description for carousel item"
                                                            fieldLabel="Text"
                                                            name="./text"/>
                                                        <ctatext
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Enter the CTA text for carousel item"
                                                            fieldLabel="CTA Text"
                                                            name="./ctaText"/>
                                                        <ctalink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Configure the CTA link for carousel item"
                                                            fieldLabel="CTA Link"
                                                            name="./ctaLink"
                                                            rootPath="/content/taylorsuniversity"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </carouselitems>
                                </items>
                            </title>
                        </items>
                    </column>
                </items>
            </carousel>
        </items>
    </content>
</jcr:root>
